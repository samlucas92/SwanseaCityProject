<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_marginLeft= "80dp"
        android:text="@string/question2_text"
		android:textColor="#FFFF"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/button_q2a1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/q2a1"/>

    <Button
        android:id="@+id/button_q2a2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_q2a1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/q2a2" />
    <Button
        android:id="@+id/button_q2a3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_q2a2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/q2a3" />
    <TextView
        android:id="@+id/scoreQ2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_q2a3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="" 
        android:textAlignment="center"
   		android:textColor="#FFFF"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreQ2"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="14dp"
        android:layout_marginLeft= "80dp"
        android:text="@string/q2a2"
		android:textColor="#FFFF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="@string/question2"
        android:textColor="#FFFF"
        android:textSize="30sp" />

</RelativeLayout>
